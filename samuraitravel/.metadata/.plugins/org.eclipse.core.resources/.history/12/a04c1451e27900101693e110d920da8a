                    <div class="col"><span th:text="${house.name}"></span></div>
                  </div>

                  <div class="row pb-2 mb-2 border-bottom">
                    <div class="col-4"><span class="fw-bold">説明</span></div>
                    <div class="col">
                      <span class="samuraitravel-pre-wrap" th:text="${house.description}"></span>
                    </div>
                  </div>

                  <div class="row pb-2 mb-2 border-bottom">
                    <div class="col-4"><span class="fw-bold">宿泊料金</span></div>
