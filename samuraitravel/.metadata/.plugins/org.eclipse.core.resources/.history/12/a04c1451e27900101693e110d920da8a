            </nav>

            <h1 class="mb-4 text-center" th:text="${house.name}">民宿名</h1>

            <div th:if="${errorMessage}" class="alert alert-danger">
              <span th:text="${errorMessage}"></span>
            </div>

            <!-- 画像：/storage/{imageName}、無ければダミー -->
            <div class="mb-4">
              <img th:if="${house.imageName}"
                   th:src="@{/storage/{img}(img=${house.imageName})}"
                   class="w-100" alt="民宿画像">
              <img th:unless="${house.imageName}"
                   th:src="@{/images/noImage.png}"
                   class="w-100" alt="NO IMAGE">
            </div>

            <div class="container">
              <div class="row">

                <!-- 左：詳細テーブル -->
                <div class="col-lg-8 container mb-4">
