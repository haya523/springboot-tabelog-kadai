package com.example.samuraitravel.repository;

import java.util.Optional;

import org.springframework.data.domain.Page;
import org.springframework.data.domain.Pageable;
import org.springframework.data.jpa.repository.JpaRepository;

import com.example.samuraitravel.entity.Review;

public interface ReviewRepository extends JpaRepository<Review, Integer> {

    // 民宿ごとのレビュー一覧（ページング・新しい順）
    Page<Review> findByHouseIdOrderByCreatedAtDesc(Integer houseId, Pageable pageable);

    // ★ユーザーの自分レビューを「最新1件だけ」取得（複数あってもOK）
    Optional<Review> findFirstByHouseIdAndUserIdOrderByCreatedAtDesc(Integer houseId, Integer userId);

    // ※NG例（こうなってたら消す/使わない）
    // Review findByHouseIdAndUserId(Integer houseId, Integer userId);   // 複数あると500
    // Optional<Review> findByHouseIdOrUserId(..)                          // Or はダメ
}
